{% extends 'base.html.twig' %}

{% block title %}Inscription
{% endblock %}

{% block content %}
	<div class="container">
		<h1>Inscription</h1>

		{{ form_start(form) }}
		<div class="row">
			<div class="col-md-4">
				{{ form_row(form.username, {"label": "Pseudo", "attr":{"placeholder":"Votre pseudo"}}) }}
			</div>
			<div class="col-md-4">
				{{ form_row(form.firstname,{"label": "Prénom", "attr":{"placeholder":"Votre prénom"}}) }}
			</div>
			<div class="col-md-4">
				{{ form_row(form.lastname,{"label": "Nom", "attr":{"placeholder":"Votre nom"}}) }}
			</div>
		</div>
		<div class="row">
			<div class="col-12">{{ form_row(form.email,{"label": "Email", "attr":{"placeholder":"Votre email"}}) }}</div>
			<div class="col-12">{{ form_row(form.password,{"label": "Mot de passe", "attr":{"placeholder":"Votre mot de passe"}}) }}</div>
			<div class="col-12">{{ form_row(form.passwordConfirm,{"label": "Comfirmer mot de passe", "attr":{"placeholder":"Comfirmer mot de passe"}}) }}</div>
		</div>

		<button type="submit" class="btn btn-success mt-4">S'inscrire</button>
		{{ form_end(form) }}

	</div>
{% endblock %}
