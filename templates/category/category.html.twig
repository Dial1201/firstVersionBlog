{% extends 'base.html.twig' %}

{% block title %}
	{{ category.title }}
{% endblock %}
{% block content %}
	<hr>

	<div class="nav-scroller py-1 mb-2">
		<nav class="nav d-flex justify-content-between">
			{% for category in categories %}
				<a class="p-2 link-black" href="{{ path('category', {'id': category.id}) }}">{{category}}</a>
			{% endfor %}
		</nav>
	</div>

	<div class="album py-5 bg-light">
		<div class="container">

			<div class="row g-3">
				{% for articles in category.articles %}
					<div class="col-md-4">
						<div class="card shadow-sm">
							<img src="/assets/blog/images/articles/{{ articles.image }}" class="card-img-top" width="100%" height="225" alt="{{ articles.image }}">
							<div class="card-body">
								<h5 class="card-title">{{ articles.title }}</h5>
								<p class="card-text">This is a wider card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p>
								<div class="d-flex justify-content-between align-items-center">
									<div class="btn-group">
										<a href="{{ path('article', {'id':articles.id}) }}">
											<button type="button" class="btn btn-sm btn-secondary">En savoir plus</button>
										</a>
									</div>
									<small class="text-muted">
										<small>Ecrit le
											{{ articles.createdAt | date("d/m/Y") }}
											Ã 
											{{ articles.createdAt | date("H:i") }}</small>
									</small>
								</div>
							</div>
						</div>
					</div>
				{% endfor %}

			</div>
		</div>
	</div>


</div>{% endblock %}
